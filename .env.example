# LiteLLM proxy (required)
LITELLM_BASE_URL=http://localhost:4000/v1
LITELLM_API_KEY=sk-your-litellm-key

# Jira (optional — omit to disable Jira integration)
JIRA_BASE_URL=https://your-org.atlassian.net
JIRA_USER_EMAIL=bot@your-org.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_WEBHOOK_SECRET=your-jira-webhook-secret

# GitLab (optional — omit to disable GitLab integration)
GITLAB_BASE_URL=https://gitlab.com
GITLAB_API_TOKEN=your-gitlab-api-token
GITLAB_WEBHOOK_SECRET=your-gitlab-webhook-secret

# R2R knowledge base (required for @support skill)
R2R_BASE_URL=http://localhost:7272
R2R_API_KEY=your-r2r-api-key

# Logging
LOG_LEVEL=INFO
